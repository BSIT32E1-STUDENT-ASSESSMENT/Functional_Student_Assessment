@model IEnumerable<Functional_Student_Assessment.Models.StudentGrade>

@{
    ViewBag.Title = "Student Grades";
}

<h2>Student Grades</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Math</th>
            <th>English</th>
            <th>Science</th>
            <th>History</th>
            <th>Values</th>
            <th>Filipino</th>
            <th>TLE</th>
            <th>Recommendation</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StudentName</td>
                <td>@item.Math</td>
                <td>@item.English</td>
                <td>@item.Science</td>
                <td>@item.History</td>
                <td>@item.Values</td>
                <td>@item.Filipino</td>
                <td>@item.TLE</td>
                <td>
                    <a href="@Url.Action("RecommendStrand", "Student", new { id = item.Id })">Get Recommendation</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddGrade", "Student")" class="btn btn-primary">Add New Grade</a>
