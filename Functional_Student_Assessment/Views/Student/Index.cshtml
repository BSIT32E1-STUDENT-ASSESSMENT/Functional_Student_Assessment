@model IEnumerable<Functional_Student_Assessment.Models.StudentGrade>
@using Functional_Student_Assessment.Models

@{
    ViewBag.Title = "Student Grades";
}

<h2>Student Grades</h2>

<table class="table">
    <thead>
        <tr>
            <th>Student Number</th>
            <th>Name</th>
            <th>Math</th>
            <th>English</th>
            <th>Science</th>
            <th>History</th>
            <th>Values</th>
            <th>Filipino</th>
            <th>TLE</th>
            <th>First Choice</th>
            <th>Second Choice</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var recommendedStrands = Strand.GetRecommendedStrands(item.Math, item.English, item.Science, item.History, item.Values, item.Filipino, item.TLE);
            <tr>
                <td>@item.StudentNumber</td> <!-- Added student number column -->
                <td>@item.StudentName</td>
                <td>@item.Math</td>
                <td>@item.English</td>
                <td>@item.Science</td>
                <td>@item.History</td>
                <td>@item.Values</td>
                <td>@item.Filipino</td>
                <td>@item.TLE</td>
                <td>@recommendedStrands.Item1</td>
                <td>@recommendedStrands.Item2</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddGrade", "Student")" class="btn btn-primary">Add New Grade</a>
