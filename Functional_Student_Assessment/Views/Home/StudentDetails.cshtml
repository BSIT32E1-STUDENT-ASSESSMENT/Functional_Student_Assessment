@model Functional_Student_Assessment.Models.StudentGrade
@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

<div>
    <h4>Student Information</h4>
    <p><strong>Student Number:</strong> @Model.StudentNumber</p>
    <p><strong>Name:</strong> @Model.StudentName</p>

    <h4>Grades</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Math</td>
                <td>@Model.Math</td>
            </tr>
            <tr>
                <td>English</td>
                <td>@Model.English</td>
            </tr>
            <tr>
                <td>Science</td>
                <td>@Model.Science</td>
            </tr>
            <tr>
                <td>History</td>
                <td>@Model.History</td>
            </tr>
            <tr>
                <td>Values</td>
                <td>@Model.Values</td>
            </tr>
            <tr>
                <td>Filipino</td>
                <td>@Model.Filipino</td>
            </tr>
            <tr>
                <td>TLE</td>
                <td>@Model.TLE</td>
            </tr>
            <!-- Add other subjects as needed -->
        </tbody>
    </table>

    <h4>Recommended Strands</h4>
    <p>First Choice: @(ViewBag.RecommendedStrands != null && ViewBag.RecommendedStrands.Item1 != null ? $"{ViewBag.RecommendedStrands.Item1.Name} - {ViewBag.RecommendedStrands.Item1.Description}" : "N/A")</p>
    <p>Second Choice: @(ViewBag.RecommendedStrands != null && ViewBag.RecommendedStrands.Item2 != null ? $"{ViewBag.RecommendedStrands.Item2.Name} - {ViewBag.RecommendedStrands.Item2.Description}" : "N/A")</p>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Homepage</a>
</div>
